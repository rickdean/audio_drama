<p class="project">

  <table class="table table-reflow showTable">
      <tbody>
          <tr>
            <th>Title</th>
              <td class='row'>{{title}}</td>
          </tr>
          <tr>
            <th>Genre</th>
              <td class='row'>{{genre}}</td>
          <tr>
            <th>Voice Artist</th>
              <td class='row'>{{voice_artist_string}}</td>
          <tr>
            <th>Site</th>
              <td class='row'>{{site}}</td>
          <tr>
            <th>RSS</th>
              <td class='row'>{{rss}}</td>
          <tr>
            <th>#Episodes</th>
            <td class='row'>{{episodes}}</td>
          <tr>
            <th>Release Date</th>
            <td class='row'>{{release_date}}</td>
          <tr>
            <th>Description</th>
            	<td class='row'>{{description}}</td>
          </tr>
      </tbody>
  </table>
  <button class="btn btn-info btn-xs update-show" data-toggle="modal"
data-target="#updateShowModal" data-show-id= {{id}}>Edit Title
</button>
  <button class="btn btn-info btn-xs delete-show" data-toggle="modal"
  data-target="#deleteShowModal" data-show-id= {{id}}>Delete</button>

</p>
